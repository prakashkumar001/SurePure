<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sure.pure">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".common.GlobalClass"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CartPage"
            android:theme="@style/MyMaterialTheme"
            />
        <activity android:name=".ProductDetailPage"
            android:theme="@style/MyMaterialTheme"
            />
        <activity android:name=".Signup"
            android:theme="@style/AppTheme.NoActionBar"
            />
        <activity android:name=".Login"
            android:theme="@style/AppTheme.NoActionBar"
            />

        <activity android:name=".Order_History"
            android:theme="@style/AppTheme.NoActionBar"
            />

        <activity android:name=".SortActivity"
            android:theme="@style/ThemeDialogCustom"
            />

        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            />


        <activity android:name=".Profile"
            android:theme="@style/AppTheme.NoActionBar"
            />
    </application>

</manifest>