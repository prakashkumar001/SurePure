<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardBackgroundColor="@color/cardview_shadow_end_color"
        card_view:cardCornerRadius="4dp"
        android:elevation="3dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/cart_image"/>

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear3"
                    android:gravity="left"
                    android:orientation="horizontal">
                    <!--  <TextView
                          android:id="@+id/pricedummy"
                          android:layout_width="wrap_content"
                          android:layout_below="@id/image"
                          android:gravity="center"
                          android:layout_height="wrap_content"
                          android:textStyle="bold"
                          android:textSize="12dp"
                          android:text="Offer price :"/>-->
                    <TextView
                        android:id="@+id/product"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:typeface="serif"
                        android:layout_height="wrap_content"
                        android:text="Product"/>

                </LinearLayout>

                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/linear"
                     android:layout_marginTop="20dp"
                     android:gravity="left"
                     android:orientation="vertical">

                     <TextView
                         android:id="@+id/sellerprice"
                         android:layout_width="wrap_content"
                         android:gravity="center"
                         android:textSize="16dp"
                         android:layout_height="wrap_content"
                         android:text="100 Rupees"/>

                 </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linear2"
                    android:layout_below="@id/linear"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/sellerprice"
                        android:layout_width="wrap_content"
                        android:layout_below="@id/image"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="sellerprice"/>
                    <TextView
                        android:id="@+id/offerprice"
                        android:layout_width="wrap_content"
                        android:gravity="left"
                        android:textSize="12dp"
                        android:layout_height="wrap_content"
                        android:text=""/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/addtocart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimary"
                            android:gravity="left"
                            android:textSize="14dp"
                            android:text="Add To Cart"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


